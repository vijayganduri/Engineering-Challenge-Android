<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.vijayganduri.nutricheck.ui.activity.FoodDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:id="@+id/top_layout"
            android:minHeight="100dp"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:background="?attr/colorPrimary">
            <TextView
                android:id="@+id/title"
                android:textSize="22sp"
                android:text="Beef burgandy"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/headerTextColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/source"
                android:paddingTop="5dp"
                android:textColor="@color/headerTextColorSecondary"
                android:text="Source : FatSecret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/favoriteButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_star"
            android:layout_marginRight="35dp"
            android:layout_below="@id/top_layout"
            android:layout_marginTop="-30dp"
            app:backgroundTint="@color/colorAccent"
            app:rippleColor="@android:color/white"
            app:elevation="6dp"
            android:layout_alignParentRight="true"
            app:pressedTranslationZ="12dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_layout"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/portionsSize"/>


            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/calories"
                                android:textSize="18sp"
                                android:maxLines="3"
                                android:textAllCaps="true"
                                android:ellipsize="end"
                                android:textColor="@color/textColorPrimary"
                                android:fontFamily="sans-serif-regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:text="@string/nutrition_calories"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:textSize="13sp"
                                android:paddingTop="15dp"
                                android:fontFamily="sans-serif-regular"
                                android:textStyle="bold"
                                android:textColor="@color/textColorSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@color/foodDetailDivider"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/protien"
                                android:textSize="18sp"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:textAllCaps="true"
                                android:textColor="@color/textColorPrimary"
                                android:fontFamily="sans-serif-regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/nutrition_protein"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:textSize="13sp"
                                android:paddingTop="15dp"
                                android:fontFamily="sans-serif-regular"
                                android:textStyle="bold"
                                android:textColor="@color/textColorSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/foodDetailDivider"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fat"
                                android:textSize="18sp"
                                android:textAllCaps="true"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:textColor="@color/textColorPrimary"
                                android:fontFamily="sans-serif-regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/nutrition_fat"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:textSize="13sp"
                                android:paddingTop="15dp"
                                android:fontFamily="sans-serif-regular"
                                android:textStyle="bold"
                                android:textColor="@color/textColorSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:background="@color/foodDetailDivider"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="20dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/carbs"
                                android:textSize="18sp"
                                android:textAllCaps="true"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:textColor="@color/textColorPrimary"
                                android:fontFamily="sans-serif-regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/nutrition_carbs"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:textSize="13sp"
                                android:paddingTop="15dp"
                                android:fontFamily="sans-serif-regular"
                                android:textStyle="bold"
                                android:textColor="@color/textColorSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardCornerRadius="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_fibre"/>
                        <TextView
                            android:id="@+id/fibre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_saturated"/>
                        <TextView
                            android:id="@+id/saturated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_sodium"/>
                        <TextView
                            android:id="@+id/sodium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_potassium"/>
                        <TextView
                            android:id="@+id/potassium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_poly"/>
                        <TextView
                            android:id="@+id/poly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_sugar"/>
                        <TextView
                            android:id="@+id/sugar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_mono"/>
                        <TextView
                            android:id="@+id/mono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_cholesterol"/>
                        <TextView
                            android:id="@+id/cholesterol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="sans-serif-regular"
                            android:textSize="15sp"
                            android:text="@string/nutrition_trans"/>
                        <TextView
                            android:id="@+id/trans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>



    </RelativeLayout>

</ScrollView>